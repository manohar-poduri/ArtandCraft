<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/remote_message_layout"
        android:layout_margin="10dp">
        
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/remote_icon"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="10dp"
            android:background="@android:color/holo_red_dark"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remote_message"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_toRightOf="@id/remote_icon"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/local_message_layout"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/local_icon"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textSize="10dp"
            android:background="@android:color/holo_green_dark"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/local_message"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_toLeftOf="@id/local_icon"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

</RelativeLayout>